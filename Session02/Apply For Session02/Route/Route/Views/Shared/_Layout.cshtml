<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
</head>
<body>

    @* Start Header *@
    <header>
        <center>
            <div class="mt-4 ">
                <a class=" btn btn-primary " asp-controller="Home"  asp-action="Index">Home</a>
                <a class=" btn btn-outline-secondary " asp-controller="Home" asp-action="Privacy">Privacy</a>
                <a class=" btn btn-outline-success " asp-controller="Home" asp-action="AboutUs">About Us</a>
                <a class=" btn btn-outline-warning " asp-controller="Home" asp-action="ContactUs">Contact Us</a>
                <a class=" btn btn-outline-info " asp-controller="Auth" asp-action="SignIn"> Sign In</a>
                <a class=" btn btn-outline-danger " asp-controller="Auth" asp-action="Register">Register</a>
            </div>
        </center>
    </header>
    @* End Header *@


    <div>
        @RenderBody()
    </div>

    <footer>
        <center>
            <div class="mt-3">
                <h1>CopyRight &copy; Route @DateTime.Now.Year</h1>
            </div>
        </center>
    </footer>
</body>
</html>
